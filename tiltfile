SOURCE_IMAGE = os.getenv("SOURCE_IMAGE", default='harbor.apps.cf.tanzutime.com/dekt-dev/mysensors-source')

k8s_custom_deploy(
    'mysensors',
    apply_cmd="tanzu apps workload apply -f workload.yaml --live-update" +
               " --local-path ." +
               " --source-image " + SOURCE_IMAGE +
               " --namespace mydev" +
               " --yes >/dev/null" +
               " && tanzu apps workload get mysensors --namespace mydev -o yaml",
    delete_cmd="tanzu apps workload delete -f config/workload.yaml --namespace mydev --yes",
    deps=['pom.xml', './target/classes'],
    container_selector='workload',
    live_update=[
      sync('./target/classes', '/workspace/BOOT-INF/classes')
    ]
)

k8s_resource('mysensors', port_forwards=["8080:8080"],
            extra_pod_selectors=[{'serving.knative.dev/service': 'mysensors'}])
allow_k8s_contexts('dekt-dev')